# Install HAProxy
sudo apt-get update
sudo apt-get install -y haproxy

# Configure HAProxy
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    # Enable SSL and define certificate location
    ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS
    ssl-default-bind-options no-sslv3
    crt /etc/letsencrypt/live/www.cyriacusifeco.tech/fullchain.pem

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/live/www.cyriacusifeco.tech/fullchain.pem # Bind to port 443 with SSL
    http-request redirect scheme https unless { ssl_fc } # Redirect all HTTP requests to HTTPS
    default_backend servers

backend servers
    balance roundrobin
    option httpchk
    server 152357-web-01 54.237.124.196:80 check
    server 152357-web-02 34.207.83.120:80 check
EOF

# Enable HAProxy init script
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Restart HAProxy
sudo service haproxy restart
